<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FWMobile.Modules.Races.RacePage">
  <ContentPage.Content>
    <StackLayout>
      <Button Margin="10,10,10,10" Command="{Binding MakePicksCommand}" Text="Make My Picks" ></Button>
      <Label HorizontalOptions="CenterAndExpand" FontAttributes="Bold" FontSize="14" Text="Race Details" ></Label>
    </StackLayout>
  </ContentPage.Content>
</ContentPage>